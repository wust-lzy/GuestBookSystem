
@{
    ViewBag.Title = "My";
}
<style>
    .table {
        font-family: 微软雅黑;
    }

        .table th,
        .table td {
            border: 1px solid #98bf21;
        }

        .table th {
            color: #ffffff;
            background-color: #3CB371;
        }

        .table td {
            color: #000000;
        }

    .alt {
        background-color: #EAF2D3;
    }
</style>
<h2>我的留言</h2>
<ul class="nav nav-tabs">
    <li role="presentation"><a href="/User/All">返回主页</a></li>
</ul>
<table class="table" id="111">
    <caption>学生名单</caption>
    <tr>
        <th>留言人</th>
        <th>留言时间</th>
        <th>标题</th>
        <th>留言内容</th>
        <th>操作</th>
    </tr>
    @foreach (var gb in Model)
    {
        if (gb.IsPass)
        {
<tr>
    <td>@gb.AuthorEmail</td>
    <td>@gb.CreatedOn</td>
    <td>@gb.Title</td>
    <td>@gb.Content</td>
    <td>@Html.ActionLink("删除留言", "Delete", new { id = gb.GuestbookId })</td>
</tr>
        }
    }
</table>
